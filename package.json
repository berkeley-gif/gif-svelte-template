{
	"name": "gif-svelte-template",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"start": "npm run dev  -- --open --port 3000",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"test:unit": "vitest",
		"lint": "eslint --ignore-path .gitignore .",
		"lint:styles": "stylelint \"**/*.{css,scss,sass,svelte}\" --cache --ignore-path .gitignore --fix --allow-empty-input",
		"sass:check": "sass --load-path=./node_modules src/styles/main.scss > /dev/null",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@carbon/charts-svelte": "^1.6.14",
		"@playwright/test": "^1.28.1",
		"@smui/button": "^7.0.0-beta.3",
		"@smui/card": "^7.0.0-beta.3",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.5.0",
		"carbon-components": "^10.58.3",
		"carbon-components-svelte": "^0.73.5",
		"carbon-icons-svelte": "^11.4.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.1",
		"open-props": "^1.5.7",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"sass": "^1.62.0",
		"smui-theme": "^7.0.0-beta.3",
		"stylelint": "^14.16.1",
		"stylelint-config-carbon": "^1.12.0",
		"stylelint-config-html": "^1.1.0",
		"stylelint-config-prettier-scss": "^0.0.1",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"svelte-material-ui": "^7.0.0-beta.3",
		"typescript": "^5.0.0",
		"vite": "^4.2.0",
		"vitest": "^0.25.3"
	},
	"type": "module",
	"lint-staged": {
		"*.{js,ts,svelte}": "npm run lint",
		"*.{css,scss,svelte}": "npm run lint:styles",
		"*.{js,svelte,jsx,ts,tsx,md,html,css,scss}": "npm run format"
	}
}
